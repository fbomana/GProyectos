<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

<validator>
   <validator-id>javax.faces.Bean</validator-id>
   <validator-class>es.ait.gp.web.util.jsf.SkipBeanValidator</validator-class>
</validator>

<application>
    <default-validators>
        <validator>
           <validator-id>javax.faces.Bean</validator-id>
           <validator-class>es.ait.gp.web.util.jsf.SkipBeanValidator</validator-class>
        </validator>        
    </default-validators>
    
    <resource-bundle>
        <base-name>es.ait.gp.web.properties.documentacion</base-name>
        <var>msgDocumentacion</var>
    </resource-bundle>

    <resource-bundle>
        <base-name>es.ait.gp.web.properties.general</base-name>
        <var>msgGeneral</var>
    </resource-bundle>
    
    <resource-bundle>
        <base-name>es.ait.gp.web.properties.proyectos</base-name>
        <var>msgProyectos</var>
    </resource-bundle>

    <resource-bundle>
        <base-name>es.ait.gp.web.properties.tareas</base-name>
        <var>msgTareas</var>
    </resource-bundle>

    <resource-bundle>
        <base-name>es.ait.gp.web.properties.usuarios</base-name>
        <var>msgUsuarios</var>
    </resource-bundle>
            
    <locale-config>
        <default-locale>es</default-locale>
    </locale-config>                 
</application>

</faces-config>
